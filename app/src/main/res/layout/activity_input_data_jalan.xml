<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputDataJalan"
    android:background="#ffffff"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/linearInfoJalan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/gradient_primary_color"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvNamaJalan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Nama Jalan"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#fff"
            />

        <TextView
            android:id="@+id/tvLokasiJalan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokasi"
            android:textColor="#fff"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/Linearinfojalan2"
        android:layout_below="@id/linearInfoJalan"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#fff"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTIM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="FLASH"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Tim"
                android:textSize="12dp"
                android:textStyle="bold" />

        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#f5f5f5" />
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvLuasJalan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200"
                android:textStyle="bold"
                android:textColor="#f4aa14"
                android:textSize="15dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Luas (mm2)"
                android:textStyle="bold"
                android:textSize="12dp"/>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#d2d2d2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e4e4e4"
                android:gravity="center">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:text="Input Kondisi Jalan"
                    android:textColor="#494949"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:orientation="vertical"
                android:background="#fff"
                android:gravity="center">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#d2d2d2" />
                <Button
                    android:id="@+id/btnRetakan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Retakan"
                    android:background="#fff"
                    android:textColor="@color/colorPrimary"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#d2d2d2" />
                <Button
                    android:id="@+id/btnAlur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alur"
                    android:background="#fff"
                    android:textColor="@color/colorPrimary"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#d2d2d2" />
                <Button
                    android:id="@+id/btnTambalan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tambalan"
                    android:background="#fff"
                    android:textColor="@color/colorPrimary"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#d2d2d2" />
                <Button
                    android:id="@+id/btnLubang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lubang"
                    android:background="#fff"
                    android:textColor="@color/colorPrimary"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#d2d2d2" />
                <Button
                    android:id="@+id/btnKekerasanPermukaan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kekerasan Permukaan"
                    android:background="#fff"
                    android:textColor="@color/colorPrimary"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#d2d2d2" />
                <Button
                    android:id="@+id/btnAmblas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amblas"
                    android:background="#fff"
                    android:textColor="@color/colorPrimary"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#d2d2d2" />
                <Button
                    android:id="@+id/btnHasil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hasil"
                    android:background="#beffda"
                    android:textColor="#008b3c"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#e4e4e4"
                android:gravity="center">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:text="Input Kondisi Drainase"
                    android:textColor="#494949"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:orientation="vertical"
                android:background="#fff"
                android:gravity="center">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#d2d2d2" />
                <Button
                    android:id="@+id/btnSaluranSamping"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Saluran Samping"
                    android:background="#fff"
                    android:textColor="@color/colorPrimary" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#d2d2d2" />
                <Button
                    android:id="@+id/btnPenghubung"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Penghubung"
                    android:background="#fff"
                    android:textColor="@color/colorPrimary"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#d2d2d2" />
                <Button
                    android:id="@+id/btnBahu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bahu"
                    android:background="#fff"
                    android:textColor="@color/colorPrimary"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#d2d2d2" />
                <Button
                    android:id="@+id/jalurPejalanKaki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jalur Pejalan Kaki"
                    android:background="#fff"
                    android:textColor="@color/colorPrimary"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#d2d2d2" />
                <Button
                    android:id="@+id/btnKereb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kereb"
                    android:background="#fff"
                    android:textColor="@color/colorPrimary"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#d2d2d2" />
                <Button
                    android:id="@+id/btnHasilD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hasil"
                    android:background="#beffda"
                    android:textColor="#008b3c"/>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <at.markushi.ui.CircleButton
        android:id="@+id/cb_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cb_color="@color/colorPrimary"
        android:src="@drawable/ic_chevron_left_white_24dp"
        />


</LinearLayout>